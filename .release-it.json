{
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "./pre-release-tags.cjs",
      "infile": "CHANGELOG.md"
    }
  },
  "git": {
    "commitMessage": "chore(release): ${version}",
    "tagName": "v${version}"
  },
  "npm": {
    "publish": false
  },
  "github": {
    "release": true
  }
}
