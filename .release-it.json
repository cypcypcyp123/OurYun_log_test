{
  "git": {
    "commitMessage": "chore(release): v${version}",
    "tagName": "v${version}",
    "requireBranch": false
  },
  "npm": {
    "publish": false,
    "version": false
  },
  "github": {
    "release": true,
    "preRelease": true
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "conventionalcommits",
      "infile": "CHANGELOG.md",
      "ignoreRecommendedBump": true
    }
  },
  "hooks": {
    "before:init": "git fetch --tags"
  }
}